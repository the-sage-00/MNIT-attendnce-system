# ============================================
# QR ATTENDANCE SYSTEM - SECURE CONFIGURATION
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/attendance?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173

# ============================================
# REDIS CONFIGURATION (Required for Security Features)
# ============================================
# Install Redis locally or use a cloud provider
# Without Redis, the system works in degraded mode with reduced security

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# SECURITY SETTINGS
# ============================================

# QR Token Settings
QR_ROTATION_INTERVAL=30000    # Rotate QR every 30 seconds
QR_TIME_WINDOW=35000          # Allow 35 second time window for token validation

# Rate Limiting
MAX_ATTENDANCE_ATTEMPTS=10    # Max attempts per minute
MAX_DEVICES_PER_STUDENT=3     # Max devices a student can register

# Location Settings
DEFAULT_RADIUS=50             # Default geofence radius in meters
MAX_RADIUS=500                # Maximum allowed radius
REQUIRED_ACCURACY=100         # Required GPS accuracy in meters

# Suspicion Thresholds
SUSPICION_THRESHOLD=50        # Score at which attendance is marked suspicious
AUTO_BLOCK_THRESHOLD=100      # Score at which student is temporarily blocked

# ============================================
# GOOGLE OAUTH
# ============================================

GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============================================
# ADMIN CONFIGURATION
# ============================================

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=YourSecurePassword123
